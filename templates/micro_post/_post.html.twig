<div class="text-4xl opacity-100 transition ease-in-out hover:opacity-60">
    <a href="{{ path('app_micro_post_show', { id : microPost.id() }) }}">{{ microPost.title|truncate(20, '...') }}</a>
</div>
<div class="mb-4 text-gray-300">
    <a href="#">{{ microPost.author.email }}</a>
</div>
<div class="text-2xl dark:text-gray-400">
    {{ microPost.text()|truncate(100, '...') }}
</div>
<div class="flex flex-row justify-between object-bottom">
    <div class="text-gray-500 dark:text-gray-400">
        {{ microPost.created().format('M d, Y') }}
    </div>
    <div class="opacity-100 transition ease-in-out  hover:opacity-60">
        <a href="#">Like <span
                    class="px-2 rounded-lg bg-gray-200 dark:bg-gray-700">0</span></a>
    </div>
</div>
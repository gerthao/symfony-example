{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <main class="mt-8">
        <div class="mb-12 flex justify-center">
            <div class="transition ease-in-out  opacity-100 hover:opacity-60">
                <a class="underline"
                   href='{{ url('app_micro_post_new') }}'>Make A
                    New Post</a>
            </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-8">
            {% for microPost in microPosts %}
                <div class="flex flex-col space-y-4">
                    {{ include('micro_post/_post.html.twig', { microPost: microPost}) }}
                </div>
            {% else %}
                <div>
                    <p>Hey! There aren't any posts here!</p>
                </div>
            {% endfor %}
        </div>
        <div class="mt-16 mb-16 flex justify-between">
            <div class="text-4xl opacity-100 transition ease-in-out  hover:opacity-60">
                {% if hasPrev %}
                    <a href="{{ url('app_micro_post_index.1', { page: page - 1 }) }}">Prev</a>
                {% endif %}
            </div>
            <div class="text-4xl opacity-100 transition ease-in-out  hover:opacity-60">
                {% if hasNext %}
                    <a href="{{ url('app_micro_post_index.1', { page: page + 1 }) }}">Next</a>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
